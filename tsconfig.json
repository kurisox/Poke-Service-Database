{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "lib": ["ES2020"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "moduleResolution": "node" // Ensure moduleResolution is set to node
  },

  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "es2022"
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}